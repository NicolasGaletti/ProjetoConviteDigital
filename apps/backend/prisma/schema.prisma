// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Evento {
  id String @id @default(uuid())
  alias String
  nome String
  senha String
  data DateTime
  local String
  descricao String
  imagem String
  imagemBackground String
  publicoEsperado Int

  @@map("eventos")
}